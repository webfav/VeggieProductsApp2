@model IEnumerable<VeggieProductsApp2.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-capitalize">Kategori-liste</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info">Tilføj ny</a>
           
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
        <table class="table table-striped border">
            <thead>
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryDescription)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryDescription)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Rediger</a> |
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Detaljer</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Slet  </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }
        else
        {
            <p>Der eksisterer endnu ikke nogle kategorier...</p>
        }
    </div>
</div>





